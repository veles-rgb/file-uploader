<head>
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="icon" href="/icons/logo.svg" type="image/x-icon">
</head>

<body>
    <%- include("partials/header") %>

        <main class="viewer-main">
            <nav class="breadcrumbs">
                <% if (breadcrumbs && breadcrumbs.length) { %>
                    <% breadcrumbs.forEach((b)=> { %>
                        <span>/</span>
                        <% if (b.href) { %>
                            <a href="<%= b.href %>">
                                <%= b.name %>
                            </a>
                            <% } else { %>
                                <span>
                                    <%= b.name %>
                                </span>
                                <% } %>
                                    <% }) %>
                                        <% } %>

                                            <% if (file && file.originalName) { %>
                                                <span>/</span>
                                                <span class="current">
                                                    <%= file.originalName %>
                                                </span>
                                                <% } %>
            </nav>

            <% if (file) { %>
                <section class="viewer-layout">
                    <div class="file-preview">
                        <% if (file.mimeType && file.mimeType.startsWith("image/")) { %>
                            <img class="preview-media" src="<%= file.previewUrl %>" alt="<%= file.originalName %>">
                            <% } else if (file.mimeType && file.mimeType.startsWith("video/")) { %>
                                <video class="preview-media" src="<%= file.previewUrl %>" controls>
                                    Your browser does not support video playback.
                                </video>
                                <% } else if (file.mimeType && file.mimeType.startsWith("audio/")) { %>
                                    <audio class="preview-audio" src="<%= file.previewUrl %>" controls>
                                        Your browser does not support audio playback.
                                    </audio>
                                    <% } else if ( file.mimeType==="application/pdf" || (file.previewUrl &&
                                        file.previewUrl.toLowerCase().includes(".pdf")) ) { %>
                                        <object class="preview-pdf" data="<%= file.previewUrl %>"
                                            type="application/pdf">
                                            <p>
                                                PDF preview not available.
                                                <a href="<%= file.previewUrl %>" target="_blank" rel="noopener">Open
                                                    PDF</a>
                                            </p>
                                        </object>
                                        <% } else { %>
                                            <div class="no-preview">
                                                <p>No preview available for this file type.</p>
                                                <a href="<%= file.previewUrl %>" target="_blank" rel="noopener">Open
                                                    file</a>
                                            </div>
                                            <% } %>
                    </div>

                    <aside class="file-meta">
                        <a class="btn btn-primary" href="<%= file.previewUrl %>" download>Download</a>

                        <div class="meta-block">
                            <div class="meta-title">
                                <%= file.originalName %>
                            </div>
                        </div>

                        <div class="meta-row">
                            <span class="meta-label">File size</span>
                            <span class="meta-value">
                                <%= file.sizePretty %>
                            </span>
                        </div>

                        <div class="meta-row">
                            <span class="meta-label">Uploaded</span>
                            <span class="meta-value">
                                <%= file.createdAtPretty %>
                            </span>
                        </div>
                    </aside>
                </section>
                <% } else { %>
                    <h1>File not found...</h1>
                    <% } %>
        </main>
</body>