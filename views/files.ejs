<head>
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <%- include("partials/header") %>
        <main class="browser-main">
            <% if (currentUser) { %>
                <div class="browser-button-container">
                    <button type="button" id="new-folder-btn">New Folder</button>
                    <form id="new-folder-form" action="/folders/create" method="POST" style="display:none;">
                        <input type="hidden" name="name" id="new-folder-name" />
                        <input type="hidden" name="parentId" value="<%= currentFolder ? currentFolder.id : '' %>" />
                    </form>
                    <button onclick="window.location.href='files/upload'">Upload File</button>
                </div>
                <div class="file-folder-browser">
                    <% if (foldersFromDb && foldersFromDb.length> 0) { %>
                        <div class="folders-display">
                            <% foldersFromDb.forEach(folder=> { %>
                                <div class="folder-item">
                                    <a href="/folders/<%= folder.id %>" class="folder-link">
                                        <img src="/icons/folder.svg" alt="">
                                        <p>
                                            <%= folder.name %>
                                        </p>
                                    </a>

                                    <div class="folder-dropdown">
                                        <img src="/icons/edit.svg" class="dropdown-toggle">

                                        <div class="dropdown-content">
                                            <form action="/folders/<%= folder.id %>/rename" method="POST">
                                                <input type="text" name="name" value="<%= folder.name %>" required />
                                                <button type="submit">Rename</button>
                                            </form>

                                            <button onclick="window.location.href='/share/folder/<%= folder.id %>'">
                                                Share
                                            </button>

                                            <form action="/folders/<%= folder.id %>/delete" method="POST"
                                                onsubmit="return confirm('⚠️ This will permanently delete this folder AND everything inside it.\n\nThis action cannot be undone.')">
                                                <button type="submit" class="danger">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                        <% } else { %>
                            <p>No Folders</p>
                            <% } %>
                                <% if (results && results.length> 0) { %>
                                    <div class="files-display">
                                        <% results.forEach(result=> { %>
                                            <div class="file-item">
                                                <a href="/files/<%= result.id %>" class="file-link">
                                                    <div class="file-card">
                                                        <% if (result.mimeType.startsWith("image/")) { %>
                                                            <img src="<%= result.previewUrl %>"
                                                                alt="<%= result.originalName %>" width="64">
                                                            <% } else if (result.mimeType.startsWith("video/")) { %>
                                                                <img src="/icons/video.svg" alt="Video" width="64">
                                                                <% } else if (result.mimeType.startsWith("audio/")) { %>
                                                                    <img src="/icons/music.svg" alt="Audio" width="64">
                                                                    <% } else if (result.mimeType==="application/pdf" )
                                                                        { %>
                                                                        <img src="/icons/file.svg" alt="PDF" width="64">
                                                                        <% } else { %>
                                                                            <img src="/icons/file.svg" alt="File"
                                                                                width="64">
                                                                            <% } %>

                                                                                <div class="file-name">
                                                                                    <%= result.originalName %>
                                                                                </div>
                                                    </div>
                                                </a>
                                            </div>
                                            <% }) %>
                                    </div>
                                    <% } else { %>
                                        <p>No files.</p>
                                        <% } %>
                                            <% } else { %>
                                                <h1>Unauthorized access</h1>
                                                <% } %>
                </div>
        </main>
        <script>
            (function () {
                const btn = document.getElementById("new-folder-btn");
                const form = document.getElementById("new-folder-form");
                const nameInput = document.getElementById("new-folder-name");

                btn.addEventListener("click", () => {
                    const name = window.prompt("Folder name:");
                    if (!name) return;

                    const trimmed = name.trim();
                    if (!trimmed) return;

                    nameInput.value = trimmed;
                    form.submit();
                });
            })();
        </script>
        <script>
            document.addEventListener("click", (e) => {
                const clickedDropdown = e.target.closest(".folder-dropdown");
                const clickedToggle = e.target.closest(".dropdown-toggle");
                const clickedMenu = e.target.closest(".dropdown-content");

                // Clicked completely outside any dropdown => close all
                if (!clickedDropdown) {
                    document.querySelectorAll(".folder-dropdown.open")
                        .forEach(d => d.classList.remove("open"));
                    return;
                }

                // Clicked inside the menu (input, buttons, form, etc.) => keep it open
                if (clickedMenu && !clickedToggle) {
                    return;
                }

                // Clicked the toggle icon => toggle this dropdown, close others
                document.querySelectorAll(".folder-dropdown.open")
                    .forEach(d => { if (d !== clickedDropdown) d.classList.remove("open"); });

                if (clickedToggle) {
                    clickedDropdown.classList.toggle("open");
                }
            });
        </script>

</body>