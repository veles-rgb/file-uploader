<header>
    <h1>Veles Files</h1>

    <div class="header-links">
        <% if (!currentUser) { %>
            <a href="/" class="<%= activePath === '/' ? 'active' : '' %>">Home</a>
            <a href="/login" class="<%= activePath.startsWith('/login') ? 'active' : '' %>">Login</a>
            <a href="/register" class="<%= activePath.startsWith('/register') ? 'active' : '' %>">Register</a>

            <% } else { %>
                <a href="/" class="<%= activePath === '/' ? 'active' : '' %>">Home</a>
                <span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24">
                        <path fill="currentColor"
                            d="M12 12q-1.65 0-2.825-1.175T8 8t1.175-2.825T12 4t2.825 1.175T16 8t-1.175 2.825T12 12m-8 6v-.8q0-.85.438-1.562T5.6 14.55q1.55-.775 3.15-1.162T12 13t3.25.388t3.15 1.162q.725.375 1.163 1.088T20 17.2v.8q0 .825-.587 1.413T18 20H6q-.825 0-1.412-.587T4 18" />
                    </svg>
                    <%= currentUser.username %>
                </span>
                <a href="/logout" class="<%= activePath.startsWith('/logout') ? 'active' : '' %>">Logout</a>
                <% } %>
    </div>
</header>