<head>
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <%- include("partials/header") %>
        <main>
            <nav class="breadcrumbs">
                <a href="/files">files</a>

                <% if (breadcrumbs && breadcrumbs.length) { %>
                    <% breadcrumbs.forEach((b, idx)=> { %>
                        <span>/</span>

                        <% if (idx===breadcrumbs.length - 1 && folder) { %>
                            <span>
                                <%= b.name %>
                            </span>
                            <% } else { %>
                                <a href="/folders/<%= b.id %>">
                                    <%= b.name %>
                                </a>
                                <% } %>

                                    <% }) %>
                                        <% } %>
                                            <% if (typeof result !=="undefined" && result && result.originalName) { %>
                                                <span>/</span>
                                                <span>
                                                    <%= result.originalName %>
                                                </span>
                                                <% } %>
            </nav>

            <% if (currentUser) { %>
                <div>
                    <div>
                        <button onclick="window.location.href='/files/upload?folderId=<%= currentFolderId %>'">Upload
                            File</button>
                        <button type="button" id="new-folder-btn">New Folder</button>
                        <form id="new-folder-form" action="/folders/create" method="POST" style="display:none;">
                            <input type="hidden" name="name" id="new-folder-name" />
                            <input type="hidden" name="parentId"
                                value="<%= currentFolderId ? currentFolderId : '' %>" />
                        </form>
                    </div>

                    <% if (shareToken) { %>
                        <div>
                            <p>This folder is being shared.</p>
                            <div>
                                <form action="/share/<%= currentFolderId %>/unshare" method="post"
                                    onsubmit="return confirm('Are you sure you want to remove public sharing for this folder?');">
                                    <button type="submit">Unshare</button>
                                </form>
                                <% if (shareUrl) { %>
                                    <button type="button" class="copy-btn" data-copy="<%= shareUrl %>">Copy
                                        link</button>
                                    <% } %>

                            </div>
                        </div>
                        <% } %>
                </div>
                <% if (children && children.length> 0) { %>
                    <div>
                        <% children.forEach(folder=> { %>
                            <div class="folder-item">
                                <a href="/folders/<%= folder.id %>">
                                    <img src="/icons/folder.svg" alt="">
                                    <p>
                                        <%= folder.name %>
                                    </p>
                                </a>
                                <div class="folder-dropdown">
                                    <img src="/icons/edit.svg" class="dropdown-toggle">

                                    <div class="dropdown-content">
                                        <form action="/folders/<%= folder.id %>/rename" method="POST">
                                            <input type="text" name="name" value="<%= folder.name %>" required
                                                minlength="1" maxlength="120" />

                                            <button type="submit">
                                                Rename
                                            </button>
                                        </form>

                                        <button
                                            onclick="window.location.href='/share/folder/<%= folder.id %>'">Share</button>

                                        <form action="/folders/<%= folder.id %>/delete" method="POST" onsubmit="return confirm(
        '⚠️ This will permanently delete this folder AND everything inside it.\n\nThis action cannot be undone.'
    );">
                                            <button type="submit" class="danger">
                                                Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>

                            </div>
                            <% }) %>
                    </div>
                    <% } else { %>
                        <p>No folders</p>
                        <% } %>

                            <% if (files && files.length> 0) { %>
                                <div>
                                    <% files.forEach(file=> { %>
                                        <div>
                                            <a href="/files/<%= file.id %>"
                                                style="text-decoration: none; color: inherit;">
                                                <div class="file-card">

                                                    <% if (file.mimeType.startsWith("image/")) { %>
                                                        <img src="<%= file.previewUrl %>" alt="<%= file.originalName %>"
                                                            width="64">

                                                        <% } else if (file.mimeType.startsWith("video/")) { %>
                                                            <img src="/icons/video.svg" alt="Video" width="64">

                                                            <% } else if (file.mimeType.startsWith("audio/")) { %>
                                                                <img src="/icons/music.svg" alt="Audio" width="64">

                                                                <% } else if (file.mimeType==="application/pdf" ) { %>
                                                                    <img src="/icons/file.svg" alt="PDF" width="64">

                                                                    <% } else { %>
                                                                        <img src="/icons/file.svg" alt="File"
                                                                            width="64">
                                                                        <% } %>

                                                                            <div class="file-name">
                                                                                <%= file.originalName %>
                                                                            </div>
                                                </div>
                                            </a>
                                        </div>

                                        <% }) %>
                                </div>
                                <% } else { %>
                                    <p>No files</p>
                                    <% } %>
                                        <% } else { %>
                                            <h1>Unauthorized access.</h1>
                                            <% } %>
        </main>
        <script>
            (function () {
                const btn = document.getElementById("new-folder-btn");
                const form = document.getElementById("new-folder-form");
                const nameInput = document.getElementById("new-folder-name");

                btn.addEventListener("click", () => {
                    const name = window.prompt("Folder name:");
                    if (!name) return;
                    if (name.length > 120) return;

                    const trimmed = name.trim();
                    if (!trimmed) return;

                    nameInput.value = trimmed;
                    form.submit();
                });
            })();
        </script>
        <script>
            document.addEventListener("click", (e) => {
                const clickedDropdown = e.target.closest(".folder-dropdown");
                const clickedToggle = e.target.closest(".dropdown-toggle");
                const clickedMenu = e.target.closest(".dropdown-content");

                if (!clickedDropdown) {
                    document.querySelectorAll(".folder-dropdown.open")
                        .forEach(d => d.classList.remove("open"));
                    return;
                }

                if (clickedMenu && !clickedToggle) {
                    return;
                }

                document.querySelectorAll(".folder-dropdown.open")
                    .forEach(d => { if (d !== clickedDropdown) d.classList.remove("open"); });

                if (clickedToggle) {
                    clickedDropdown.classList.toggle("open");
                }
            });
        </script>
        <script>
            (function () {
                const btn = document.querySelector(".copy-btn");
                if (!btn) return;

                const status = document.getElementById("copyStatus");

                btn.addEventListener("click", async () => {
                    const text = btn.dataset.copy || document.getElementById("shareLink")?.value || "";

                    try {
                        await navigator.clipboard.writeText(text);
                        if (status) {
                            status.style.display = "inline";
                            status.textContent = "Copied!";
                            setTimeout(() => (status.style.display = "none"), 1200);
                        }
                    } catch (e) {
                        const input = document.getElementById("shareLink");
                        if (!input) return;

                        input.hidden = false;
                        input.select();
                        input.setSelectionRange(0, input.value.length);
                        document.execCommand("copy");
                        input.hidden = true;

                        if (status) {
                            status.style.display = "inline";
                            status.textContent = "Copied!";
                            setTimeout(() => (status.style.display = "none"), 1200);
                        }
                    }
                });
            })();
        </script>

</body>